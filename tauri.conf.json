{
  "build": {
    "distDir": "src",
    "devPath": "src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "switch-shuttle",
    "version": "1.1.3"
  },
  "tauri": {
    "windows": [
      {
        "label": "main",
        "title": "Main",
        "url": "ui/main.html",
        "width": 400,
        "height": 200,
        "x": 0,
        "y": 0,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": false
      },
      {
        "label": "input_window",
        "title": "Provide Inputs",
        "url": "ui/inputs.html",
        "width": 400,
        "height": 400,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["*/**"]
      },
      "window": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": true,
        "open": true
      }
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.SwitchShuttle.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
