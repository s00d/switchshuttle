{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "productName": "switch-shuttle",
  "version": "1.3.1-rc.0",
  "identifier": "com.SwitchShuttle.app",
  "plugins": {
    "updater": {
      "active": false,
      "dialog": false,
      "endpoints": [
        "https://raw.githubusercontent.com/s00d/switchshuttle/update/latest.json"
      ],
      "pubkey": "generate updater key: https://tauri.app/v1/guides/distribution/updater/",
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Main",
        "width": 400,
        "height": 200,
        "x": 0,
        "y": 0,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "id": "switch-shuttle-tray"
    }
  }
}
